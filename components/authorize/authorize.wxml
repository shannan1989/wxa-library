<view class='authorize' catchtouchmove='onTouchMove' hidden='{{hidden}}'>
    <view class='authorize_wrapper'>
        <view class='authorize_tips'>
            <text class='authorize_tip1'>根据微信小程序要求\n您需要授权方能使用该程序的所有功能</text>
            <view class='authorize_tip2'>仅获取您的公开信息（头像、昵称等）</view>
        </view>
        <button class='authorize_button' open-type="getUserInfo" lang='zh_CN' bindgetuserinfo="onGetUserInfo" bindtap='onTapButton'>同意授权</button>
    </view>
</view>