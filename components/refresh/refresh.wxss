.refresh {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: #f5f5f5;
    z-index: 100;
}

.refresh_text {
    font-size: 30rpx;
    color: #b0a99e;
    text-align: center;
    margin-top: 430rpx;
    line-height: 70rpx;
}

.refresh_button {
    margin: 40rpx auto 20rpx;
    width: 400rpx;
    border-radius: 60rpx;
    line-height: 98rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    background-color: #ff6262;
}
